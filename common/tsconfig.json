{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist/",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
